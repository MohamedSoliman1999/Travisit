<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/colorWhite"
    app:layout_constraintTop_toBottomOf="@+id/f_explore_v_divider">
    <EditText
        android:id="@+id/layout_search_bar_et_search"
        android:drawableStart="@drawable/ic_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/hint_search_offers"
        android:drawableTint="#818181"
        android:drawablePadding="10dp"
        android:textColor="@color/colorBorderSummerSky"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_search_bar_iv_filter"/>
    <!-- Filter ImageView -->
    <ImageView
        android:id="@+id/layout_search_bar_iv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter"
        android:tint="#818181"
        android:padding="15dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>