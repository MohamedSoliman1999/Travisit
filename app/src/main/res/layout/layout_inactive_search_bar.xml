<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/colorWhite"
    app:layout_constraintTop_toBottomOf="@+id/f_explore_v_divider">

    <!-- Search Bar Edit Text-->
    <TextView
        android:id="@+id/layout_inactive_search_bar_tv_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_rectangle_white"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:drawableTint="#818181"
        android:gravity="center_vertical"
        android:hint="@string/hint_search_offers"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:textColor="@color/colorBorderSummerSky"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Filter ImageView -->
    <ImageView
        android:id="@+id/layout_inactive_search_bar_iv_filter"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_rectangle_white"
        android:padding="15dp"
        android:src="@drawable/ic_filter"
        android:tint="#818181"
        app:layout_constraintBottom_toBottomOf="@id/layout_inactive_search_bar_tv_search"
        app:layout_constraintEnd_toEndOf="@id/layout_inactive_search_bar_tv_search"
        app:layout_constraintTop_toTopOf="@id/layout_inactive_search_bar_tv_search" />

</androidx.constraintlayout.widget.ConstraintLayout>
