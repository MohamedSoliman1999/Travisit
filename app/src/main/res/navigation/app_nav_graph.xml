<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_to_auth_graph"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"
            app:popUpTo="@id/app_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <navigation
        android:id="@+id/auth_graph"
        app:startDestination="@id/authenticationFragment">
        <fragment
            android:id="@+id/authenticationFragment"
            android:name="com.travisit.travisitstandard.vvm.destination.AuthenticationFragment"
            android:label="authentication_fragment"
            tools:layout="@layout/fragment_authentication">
            <action
                android:id="@+id/action_from_auth_to_reg"
                app:destination="@id/registrationFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left"
                app:popUpTo="@id/authenticationFragment"
                app:popUpToInclusive="false"/>
            <action
                android:id="@+id/action_from_auth_to_forgot_password"
                app:destination="@id/forgotPasswordFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left"
                app:popUpTo="@id/authenticationFragment"
                app:popUpToInclusive="false"/>
            <action
                android:id="@+id/action_from_auth_to_home"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left"
                app:popUpTo="@id/app_nav_graph"
                app:popUpToInclusive="false"/>
        </fragment>
        <fragment
            android:id="@+id/registrationFragment"
            android:name="com.travisit.travisitstandard.vvm.destination.RegistrationFragment"
            android:label="registration_fragment"
            tools:layout="@layout/fragment_registration">
            <action
                android:id="@+id/action_from_reg_to_auth"
                app:destination="@id/authenticationFragment"
                app:enterAnim="@anim/slide_from_out_left_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_right" />
            <action
                android:id="@+id/action_from_reg_to_complete_traveler_profile"
                app:destination="@id/travelerCompleteProfileFragment"
                app:enterAnim="@anim/slide_from_out_left_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_right">
                <argument
                    android:name="user"
                    android:defaultValue="@null"
                    app:argType="com.travisit.travisitstandard.model.User"
                    app:nullable="true"/>
            </action>
            <action
                android:id="@+id/action_from_reg_to_complete_guide_profile"
                app:destination="@id/guideCompleteProfileFragment"
                app:enterAnim="@anim/slide_from_out_left_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_right">
                <argument
                    android:name="user"
                    android:defaultValue="@null"
                    app:argType="com.travisit.travisitstandard.model.User"
                    app:nullable="true"/>
            </action>
        </fragment>
        <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="com.travisit.travisitstandard.vvm.destination.ForgotPasswordFragment"
            android:label="fragment_forgot_password"
            tools:layout="@layout/fragment_forgot_password" >
            <action
                android:id="@+id/action_from_forgot_password_to_auth"
                app:destination="@id/authenticationFragment"
                app:enterAnim="@anim/slide_from_out_left_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_right" />
            <action
                android:id="@+id/action_from_forgot_password_to_check_password_code_fragment"
                app:destination="@id/resetPasswordCodeFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left" >
                <argument
                    android:name="code"
                    android:defaultValue="@null"
                    app:argType="string"
                    app:nullable="true"/>
            </action>
        </fragment>
        <fragment
            android:id="@+id/travelerCompleteProfileFragment"
            android:name="com.travisit.travisitstandard.vvm.destination.TravelerCompleteProfileFragment"
            android:label="fragment_traveler_complete_profile"
            tools:layout="@layout/fragment_traveler_complete_profile">
            <action
                android:id="@+id/action_from_t_complete_profile_to_home"
                app:destination="@id/homeFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left"/>
        </fragment>
        <fragment
            android:id="@+id/guideCompleteProfileFragment"
            android:name="com.travisit.travisitstandard.vvm.destination.GuideCompleteProfileFragment"
            android:label="fragment_guide_complete_profile"
            tools:layout="@layout/fragment_guide_complete_profile" >
            <action
                android:id="@+id/action_from_g_complete_profile_to_account_status"
                app:destination="@id/accountStatusFragment"
                app:enterAnim="@anim/slide_from_out_right_to_center"
                app:exitAnim="@anim/slide_from_center_to_out_left"/>
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_from_home_to_offer_details"
            app:destination="@id/exploreItemDetailsFragment"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left">
            <argument
                android:name="offer"
                android:defaultValue="@null"
                app:argType="com.travisit.travisitstandard.model.Offer"
                app:nullable="true"/>
            <argument
                android:name="tour"
                android:defaultValue="@null"
                app:argType="com.travisit.travisitstandard.model.Tour"
                app:nullable="true"/>
        </action>
        <action
            android:id="@+id/action_from_explore_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.chatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.AccountFragment"
        android:label="fragment_account_fragment"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_from_account_to_profile"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"/>
        <action
            android:id="@+id/action_from_account_logout"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"
            app:popUpTo="@id/app_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/accountStatusFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.AccountStatusFragment"
        android:label="fragment_account_status"
        tools:layout="@layout/fragment_account_status">
        <argument
            android:name="is_verified"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_from_account_status_to_auth_graph"
            app:destination="@id/auth_graph"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"
            app:popEnterAnim="@anim/slide_from_out_left_to_center"
            app:popExitAnim="@anim/slide_from_center_to_out_right"
            app:popUpTo="@id/app_nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_from_account_status_to_home"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/exploreItemDetailsFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.ExploreItemDetailsFragment"
        android:label="fragment_explore_item_details"
        tools:layout="@layout/fragment_explore_item_details">
        <argument
            android:name="offer"
            android:defaultValue="@null"
            app:argType="com.travisit.travisitstandard.model.Offer"
            app:nullable="true"/>
        <argument
            android:name="tour"
            android:defaultValue="@null"
            app:argType="com.travisit.travisitstandard.model.Tour"
            app:nullable="true"/>

    </fragment>
    <fragment
        android:id="@+id/resetPasswordCodeFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.ResetPasswordCodeFragment"
        android:label="fragment_check_password_code"
        tools:layout="@layout/fragment_reset_password_code">
        <argument
            android:name="code"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true"/>
        <action
            android:id="@+id/action_from_reset_password_code_to_reset_password"
            app:destination="@id/resetPasswordFragment"
            app:enterAnim="@anim/slide_from_out_right_to_center"
            app:exitAnim="@anim/slide_from_center_to_out_left"
            app:popUpTo="@id/authenticationFragment"
            app:popUpToInclusive="false">
            <argument
                android:name="code"
                android:defaultValue="@null"
                app:argType="string"
                app:nullable="true"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.travisit.travisitstandard.vvm.destination.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" >
        <argument
            android:name="code"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
</navigation>