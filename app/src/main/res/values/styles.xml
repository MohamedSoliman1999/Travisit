<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/customPopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
    </style>
    <style name="customOutLinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorBorderSummerSky</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="fontFamily">@font/segoeui_font</item>
        <item name="android:textColorHint">@color/colorPlaceholderLightGrey</item>
        </style>

    <style name="customOutlinedExposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/colorBorderSummerSky</item>
        <item name="colorControlActivated">@color/colorBorderSummerSky</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="fontFamily">@font/segoeui_font</item>
        <item name="android:textColorHint">@color/colorPlaceholderLightGrey</item>
    </style>

    <style name="customBlueUnFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="android:strokeColor">@color/colorSubHeaderSummerSky</item>
        <item name="hintTextColor">@color/colorPlaceholderGrey</item>
        <item name="colorControlActivated">@color/colorSubHeaderSummerSky</item>
    </style>
    <style name="customGreenUnFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="android:strokeColor">@color/colorGreenMessage</item>
        <item name="hintTextColor">@color/colorPlaceholderGrey</item>
        <item name="colorControlActivated">@color/colorGreenMessage</item>
    </style>
    <style name="customGreenFilledBox" parent="customGreenUnFilledBox">
        <item name="boxBackgroundColor">#f5f5f5</item>
    </style>

    <style name="customPopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="colorOnBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPlaceholderLightGrey</item>
    </style>
    <style name="customFilledExposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#f5f5f5</item>
        <item name="android:strokeColor">@color/colorGreenMessage</item>
        <item name="hintTextColor">@color/colorPlaceholderGrey</item>
        <item name="colorControlActivated">@color/colorGreenMessage</item>
    </style>
<!--TabLayout Style-->
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="color">#000</item>
        <item name="colorPrimary">@color/colorPlaceholderLightGrey</item>
        <item name="colorSecondary">@color/RedGradientEnd</item>
        <item name="android:fontFamily">@font/segoeui_font</item>
    </style>
    <!--SolimanTabs Style-->
    <style name="SolimanTabs" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="TabLayoutStyleSoliman" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SolimanTabs</item>
    </style>
    <style name="RoundedGuidImage">
        <item name="cornerSize">10dp</item>
    </style>
</resources>
